{
  "name": "react-semantic-ui-start-kit",
  "description": "A starter kit for spinning up a React and Semantic-UI frontend project",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "bwyap",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:semantic": "./node_modules/.bin/gulp --gulpfile semantic/gulpfile.js --cwd semantic/ build-assets && ./node_modules/.bin/gulp --gulpfile semantic/gulpfile.js --cwd semantic/ build-css",
    "build:package": "./node_modules/.bin/env-cmd config/prod.config ./node_modules/.bin/webpack -p --progress",
    "watch:semantic": "./node_modules/.bin/gulp --gulpfile semantic/gulpfile.js --cwd semantic/ watch",
    "watch:local": "./node_modules/.bin/env-cmd config/dev.config ./node_modules/.bin/webpack-dev-server",
    "build": "npm run build:semantic && npm run build:package",
    "local": "./node_modules/.bin/concurrently -k \"npm run watch:semantic\" \"npm run watch:local\"",
    "stat": "./node_modules/.bin/env-cmd config/prod.config ./node_modules/.bin/webpack -p --json --progress > stats.json"
  },
  "dependencies": {
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-router-dom": "^4.2.2",
    "semantic-ui-react": "^0.76.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.7",
    "env-cmd": "^7.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "gulp": "^3.9.1",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.5.3",
    "run-sequence": "^2.2.0",
    "sass-loader": "^6.0.6",
    "semantic-ui": "^2.2.13",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3"
  }
}
